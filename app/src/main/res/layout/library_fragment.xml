<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library_background">

    <TextView
        android:id="@+id/lib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ly_65"
        android:layout_marginTop="@dimen/ly_65"
        android:layout_marginEnd="@dimen/ly_65"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:gravity="center_horizontal"
        android:text="@string/library"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_20" />

    <Button
        android:id="@+id/shuffle"
        android:layout_width="@dimen/button_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/lib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ly_40"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:text="@string/shuffle_play"
        android:textColor="@android:color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_library"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shuffle"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/ly_12"
        android:background="@android:color/transparent" />

</RelativeLayout>